# See https://git-scm.com/docs/gitattributes for more about git attribute files.

# Mark the database schema as having been generated.
db/schema.rb linguist-generated

# Mark any vendored files as having been vendored.
vendor/* linguist-vendored
config/credentials/*.yml.enc diff=rails_credentials
config/credentials.yml.enc diff=rails_credentials

# Auto detect text files and perform LF normalization
* text=auto

# Force bash scripts to use LF
*.sh text eol=lf

# Force Ruby files to use LF
*.rb text eol=lf
*.rake text eol=lf
*.gemspec text eol=lf
Gemfile text eol=lf
Gemfile.lock text eol=lf

# Force JavaScript files to use LF
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# Force CSS files to use LF
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf

# Force HTML files to use LF
*.html text eol=lf
*.erb text eol=lf

# Force configuration files to use LF
*.yml text eol=lf
*.yaml text eol=lf
*.config text eol=lf
*.conf text eol=lf

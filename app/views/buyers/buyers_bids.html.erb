<div class="dropdown">
        <button class="d-flex align-items-center rounded-pill dropdown-toggle border filter-btn-round p-2 px-3" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <%= image_tag('filter.svg', alt: 'Search', class:'mx-2') %>
        Filter
        </button>
        
        <!-- Dropdown Menu -->
        <div class="dropdown-menu p-3" style="width: 360px;">
            <label class="form-label fw-bold">Order By</label>

            <!-- Date Picker -->
            <div class="mb-3">
                <label class="form-label">Date</label>
                <div class="input-group">
                    <input type="date" class="form-control" id="buyerBidStartDate">
                    <span class="input-group-text">â†’</span>
                    <input type="date" class="form-control" id="buyeBidEndDate">
                </div>
            </div>

            <!-- Model Select -->
            <div class="mb-3">
                <label class="form-label">Filter By</label>
                <select class="form-select" id="buyer-bid-filter-by">
                    <option selected disabled>Select Filter By</option>
                    <option value="">All</option>
                    <option value="newest">Newest</option>
                    <option value="oldest">Oldest</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Bids Status</label>
                <select class="form-select" id="buyer-bids-status">
                    <option selected disabled>Select Bids Status</option>
                    <option value="">All</option>
                    <option value="pending">Pending</option>
                    <option value="rejected">Rejected</option>
                </select>
            </div>

            <!-- Apply Button -->
            <div class="d-flex align-items-center justify-content-between">
            <button class="btn btn-danger" id="resetBidFilter">Reset</button>
            <button class="btn btn-primary" id="buyer-bid-apply-filter">Apply</button>
            </div>
            
        </div>
    </div>
</div>
<div class="shadow mt-2 productTableRadius">
    <div class="table-responsive">
        <table class="table productTable text-center mobile-table mobile-table-bids" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>DATE</th>
                    <th> PRODUCT NAME</th>
                    <th>QUANTITY</th>
                    <th>BASE PRICE</th>
                    <th>QUOTED PRICE</th>
                    <th>ASKING PRICE</th>
                    <th>STATUS</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody id="bidsList">
                <%= render 'bids', bids: @bids , role: 'buyer' %>
            </tbody>
        </table>

    </div>
</div>
<div id="pagination">
    <%= paginate @bids %>
</div>

<div class="modal fade" id="negotiateModal" tabindex="-1" aria-labelledby="negotiateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="negotiateModalLabel">Negotiate Bid</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            <div id="bid-name" class="d-flex justify-content-between"> </div>
            <div id="bid-product" class="d-flex justify-content-between"> </div>
            <div id="bid-basePrice" class="d-flex justify-content-between"> </div>
            <div id="bid-offeredPrice" class="d-flex justify-content-between"> </div>
            <div id="bid-pcs" class="d-flex justify-content-between"> </div>
                <form id="negotiateForm">
                    <input type="hidden" name="bid_id" id="bidId" value="">
                    <input type="hidden" name="buyer_id" id="buyer_id" value="<%= current_user.present? ? current_user.id : nil%>">
                    <div class="text-center">
                        <input type="text" name="offer_price" id="offerPrice" class="input-border mt-2 w-100" placeholder="Enter Offer price" onchange="fivePercentRule()" required>
                        <small id="bid-price-error" class="text-danger" style="display: none;">Bid price error</small>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="setBtnStats mt-2 btn w-100" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
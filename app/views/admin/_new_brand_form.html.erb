<div class="container">
  <%= form_tag(@brand.persisted? ? admin_brand_path(@brand) : '/admin/brands', 
               method: @brand.persisted? ? :put : :post, 
               class: 'formtastic product', 
               ) do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <h1><%= @brand.persisted? ? "Edit Brand" : "New Brand" %></h1>
    <fieldset class="form-group">
    <% if @brand.errors.any? %>
        <div class="alert alert-danger">
            <ul>
                <% @brand.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
      <div class="form-row mt-4">
        <div class="form-group col-md-12">
          <%= label_tag 'brand[name]', "Name", class: 'control-label' %>
          <%= text_field_tag 'brand[name]', @brand.name, class: 'form-control', required: true , placeholder: "Enter brand name"%>
          <% if @brand.errors[:name].any? %>
            <div class="text-danger">
              <%= @brand.errors[:name].join(', ') %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-2 d-flex">
          <%= submit_tag @brand.persisted? ? 'Update Brand' : 'Create Brand', 
                         class: 'btn btn-primary py-2 mr-2' %>
          <%= link_to 'Cancel', '/admin/brands', class: 'btn btn-secondary' %>
        </div>
      </div>
    </fieldset>
  <% end %>
</div>

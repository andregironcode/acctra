<div class="row mb-4">
    <div class="col-lg-12 mobile-padding">
        <div class="headerTableFlex borderNone setPaddingCard">
            <div class="recent-orders">Recent Orders</div>
            <%
=begin%>
            <div class="heeaderTableOrder mobile-table">
                Recent Orders
                <div class="monthNameFilter">
                    <select class="monthNamesInput" name="monthly" id="">
                        <option value="today">Today</option>
                        <option value="yesterday">Yesterday</option>
                        <option value="one_week_ago">One Week ago</option>
                    </select>

                </div>
            </div>
            <%
=end%>
            <table class="table setRecentOrderTble text-center mobile-table" id="recentOrdersTable">
                <thead class="tHeadBgColor ">
                    <tr>
                        <th>Product Name</th>
                        <th>SKU</th>
                        <th>Date - Time</th>
                        <th>Quantity</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody class="setFontOrderTable" id="recent_orders_body">
                    <% if @recent_orders.present?%>
                    <%  @recent_orders.each do |recent_order| %>
                    <%  recent_order.order_items.limit(1).each do |order_item| %>
                    <tr class="setBorderBottomTr" onclick="window.location='/order-details/<%= recent_order.id %>'">
                        <td>
                            <a href="/products/<%= order_item.inventory.product.id %>/"> <%=order_item.inventory.product.name %> </a>
                        </td>
                        <td><%= order_item.inventory.product.sku %></td>
                        <td><%= recent_order.created_at.strftime("%d.%m.%Y - %I.%M %p") %></td>
                        <td><%= order_item.quantity %></td>
                        <td><%= number_to_currency(order_item.inventory.price * order_item.quantity, precision: 0) %></td>
                        <td><button class="order-<%= recent_order.status %>"><%= recent_order.status == "created" ?  "New": recent_order.status.capitalize %></button></td>
                    </tr>
                    <% end %>
                    <% end %>
                    <% else %>
                    <td colspan="12" class="text-center">No recent orders present</td>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
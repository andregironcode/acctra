<div class="row">
    <div class="col-xl-8 col-lg-7 col-sm-12 mb-2 mobile-padding">
        <div class="shadow setPaddingCard orderChartBg borderNone">
            <div class="chart-title">Total Orders</div>
            <div class="chart-container">
                <% if @orders.present?%>
                <% product_counts = {} %>
                <% @orders.each do |order| %>
                <% order.order_items.each do |item| %>
                <% product_name = item.product.category.name %>
                <% product_counts[product_name] ||= 0 %>
                <% product_counts[product_name] += 1 %>

                <% end %>
                <% end %>
                <% sorted_product_counts = product_counts.sort_by { |name, count| -count }.take(4) %>

                <div class="AdminsetHeightBars">
                    <% sorted_product_counts.each do |name, count| %>
                    <div class="bar" data-value="<%= count %>">
                        <div class="label">
                            <%= name %>
                        </div>
                        <div class="bar-container">
                            <div class="bar-fill">
                            </div>
                        </div>
                    </div>
                    <% end %>
                    <% max_count = product_counts.values.max %>




                </div>

                <div class="axis d-none">
                    <span> 0</span>
                    <span id="firstValue"></span>
                    <span id="secondValue"></span>
                    <span id="thirdValue"></span>
                    <span id="max-count"><%= max_count %></span>
                </div>
                <%end%>
            </div>
        </div>
    </div>

    <div class="col-xl-4 col-lg-5 mobile-padding">
        <div class="card shadow mb-2 setPaddingCard borderNone">
            <div class="d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 sellingProductsText">Top Selling Product</h6>

            </div>
            <hr class="sidebar-divider hrColor">
            <div class="card-body p-0">
                <div class="productsSellingParent setOverFlowDashBoard">
                    <div id="seller-products-container">
                        <% top_selling_products = Product.top_selling_products(3, current_user) %>
                        <%top_selling_products.each do |product| %>

                        <a href="/products/<%= product.id%>" class="full-width-link">
                    <div class="sellingProducts mt-4">
                      <div class="flag_alignment d-flex gap-3">
                        <div class="productMemory">
                          <span class="flag flag-icon flag-icon-<%=product.country.downcase%> flag-icon-squared"></span>
                        </div>
                        <div class="productName">
                          <div><%= product.name %></div>
                          <div class="productMemory"><%= product.variant %></div>
                        </div>
                      </div>
                      <div class="productPrice">
                        <div><%= number_to_currency(product.total_sales.round, precision: 0) %></div>
                        <div class="productSales"><%= product.total_quantity_sold%> sales</div>
                      </div>
                    </div>
                  </a>
                        <% end %>
                    </div>
                </div>

                <a href="/statistics" class="btn setBtnStats mt-3">
                    VIEW STATS
                </a>
            </div>
        </div>
    </div>
</div>


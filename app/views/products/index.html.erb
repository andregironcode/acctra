<div class="container-fluid">
    <div class="productsHeader">
        <h1 class="productText">Products</h1>
        <div class="ProductsSearchFlex">
            <%= form_with(url: products_path, method: :get, local: true) do |form| %>
            <button type="submit" class="search-button">
                <%= image_tag('search.svg', alt: 'Search', class: 'search-icon') %>
            </button>
            <%= form.text_field :search, class: 'ProductsSearchInput', placeholder: 'Search product', value: params[:search] %>

            <% end %>
        </div>
    </div>
    <div class="shadow mb-4 productTableRadius mt-4">
        <div class="table-responsive">
            <table class="table productTable" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th class="pl-5">Product Name</th>
                        <th>Category</th>
                        <th>Sku</th>

                    </tr>
                </thead>
                <tbody>
                    <% if @products.present? %>
                    <% @products.each do |product| %>
                    <tr>
                        <td class=" pl-5 py-4"> <%= product.name %></td>
                        <td class=" py-4"> <%= product.category.name %></td>
                        <td class=" py-4"> <%= product.sku %></td>
                    </tr>
                    <% end %>
                    <% else %>
                    <tr>
                        <td colspan="5" class="text-center">No Products Found</td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
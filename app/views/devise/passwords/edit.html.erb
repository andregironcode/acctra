<div class="bg-gradient-primary bgImgLogin">
    <div class="container logInWidth align-items-center justify-content-center d-flex">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card o-hidden border-0 my-5 radiusLogin">
                    <div class="card-body p-0">
                        <div class="row d-flex justify-content-center">
                            <div class="col-lg-12 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-12 h-100">
                                <div class="p-5">
                                    <div class="text-center mb-4">
                                        <h1 class="h4 text-gray-900 loginText">Change Your Password</h1>
                                        <p class="descOflogin">
                                            Enter your new password below to reset your account password.
                                        </p>
                                    </div>

                                    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                                        <%= render "devise/shared/error_messages", resource: resource %>

                                        <%= f.hidden_field :reset_password_token %>

                                        <div class="form-group">
                                            <label class="emailLogin mb-3" for="password">New Password:</label>
                                            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control emailBgLogin", placeholder: "Enter new password" %>
                                            <% if @minimum_password_length %>
                                                <small class="text-muted d-block mb-1">(<%= @minimum_password_length %> characters minimum)</small>
                                            <% end %>
                                        </div>

                                        <div class="form-group">
                                            <label class="emailLogin mb-3" for="password_confirmation">Confirm New Password:</label>
                                            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control emailBgLogin", placeholder: "Confirm new password" %>
                                        </div>

                                        <div class="justify-content-center d-flex">
                                            <%= f.submit "Change My Password", class: "btn btn-primary w-75 signInText" %>
                                        </div>
                                    <% end %>

                                    <div class="mt-4 text-center">
                                        <a href="<%= new_session_path(resource_name) %>" class="forgetPassPsgeLgn">Back to Login</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

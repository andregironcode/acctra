<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    
    <% if flash[:notice].present? %>
      <div class="alert alert-success text-center alert-dismissible fade show" role="alert">
        <%= flash[:notice] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <% if flash[:errors].present? %>
      <div class="alert alert-danger text-center alert-dismissible fade show" role="alert">
        <%= flash[:errors] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <h2 class="text-center mb-3">Verify OTP</h2>

    <%= form_tag verify_otp_path, method: :post, class: "needs-validation" do %>
          <%= hidden_field_tag :email, params[:email] %>
      <div class="mb-3">
        <label for="otp" class="form-label">Enter OTP:</label>
        <%= text_field_tag :otp, nil, class: "form-control text-center", required: true, placeholder: "6-digit OTP" %>
      </div>

      <div class="d-grid gap-2">
        <%= submit_tag "Verify OTP", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

  </div>
</div>

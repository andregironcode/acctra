<div class="shadow mt-2 productTableRadius">
    <div class="table-responsive">
        <table class="table productTable text-center mobile-table" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th class="pl-3">DATE</th>
                    <th> PRODUCT NAME</th>
                    <th>BASE PRICE</th>
                    <th>QUANTITY</th>
                    <th>BUYER OFFER</th>
                    <th>SELLER OFFER</th>
                    <th>STATUS</th>
                </tr>
            </thead>
            <tbody id="ordersList">
                <% if @bids.present? %>
                <% @bids.each do |bid| %>
                <tr>
                    <td class="py-4"><%= bid.created_at.strftime("%d %b %Y") %></td>
                    <td class="py-4"><%= bid.inventory.product.name %></td>
                    <td class="py-4" id="<%=bid.id %>-base-price"><%= number_to_currency(bid.inventory.price , precision: 0)%></td>
                    <td class="py-4"><%= bid.quantity %></td>
                    <td class="py-4"><%= bid.quoted_price.present? ? number_to_currency(bid.quoted_price , precision: 0) : "waiting for buyer's bid"  %></td>
                    <td class="py-4"><%= number_to_currency(bid.offer_price , precision: 0) %></td>
                    <td class="py-4"><%= bid.status %></td>
                    


                </tr>
                <% end %>
                <% else %>
                <tr>
                    <td colspan="7" class="py-4">No Bids found</td>
                </tr>
                <% end %>
            </tbody>
        </table>

    </div>
</div>

<div id="pagination">
    <%= paginate @bids %>
</div>


<div class="modal fade" id="negotiateModal" tabindex="-1" aria-labelledby="negotiateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="negotiateModalLabel">Negotiate Bid</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="negotiateForm">
                    <input type="hidden" name="bid_id" id="bidId" value="">
                    <div class="text-center">
                        <input type="text" name="offer_price" id="offerPrice" class="input-border mt-2 w-100" placeholder="Enter Offer price" onchange="fivePercentRule()"  required>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="setBtnStats mt-2 btn w-100" type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>